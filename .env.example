# Required environment variables for the Local Agent Helper

# OAuth Client ID for the Native Application registration
HELPER_APP_CLIENT_ID=

# URL for the authentication worker service
AUTH_WORKER_URL=

# URL for the main cloud platform worker API
MCP_WORKER_API_URL=

# OpenAI API Key for the agent's LLM
OPENAI_API_KEY=

# Optional: Specify a different OpenAI-compatible model
# LLM_MODEL="gpt-4o-mini"

# Optional: Path to the Chrome/Chromium executable for Playwright
# CHROME_PATH="/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"

# Optional: Path to a specific Chrome user data directory for Playwright
# CHROME_USER_DATA="/Users/your_user/Library/Application Support/Google/Chrome/Default" 